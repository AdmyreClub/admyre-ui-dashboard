
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

enum BrandOrAgency {
  BRAND
  AGENCY
}

model User {
  id         String     @id @unique // matches Clerk user id
  email      String     @unique
  count      Int        @default(0)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  survey     Survey?
  strategies Strategy[]
}

model Survey {
  id          String    @id @unique
  user        User      @relation(fields: [userId], references: [id])
  userId      String    @unique
  brandOrAgency BrandOrAgency
  teamSize    Int
  discovery   String
  productUse  String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Strategy {
  id          String   @id @unique @default(uuid())
  name        String
  pictureUrl  String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  lists       List[]
  user        User     @relation(fields: [userId], references: [id])
}

model List {
  id         String   @id @unique @default(uuid())
  name       String?
  strategyId String
  profiles   Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  strategy   Strategy @relation(fields: [strategyId], references: [id])
}


